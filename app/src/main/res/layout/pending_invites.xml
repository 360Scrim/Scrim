<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <TextView
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:id="@+id/name"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        />
    <com.chris.scrim.RoundedImageView
        android:id="@+id/profileImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_toRightOf="@id/name"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="128"
        android:id="@+id/vitalizeRep"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/profileImage"
        />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/approveButton"
        android:layout_marginLeft="60dp"
        android:background="@drawable/approve"
        android:layout_toRightOf="@id/vitalizeRep" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/rejectButton"
        android:background="@drawable/reject"
        android:layout_toRightOf="@+id/approveButton"
     />


</RelativeLayout>